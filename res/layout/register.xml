<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <include android:id="@+id/head"
         layout="@layout/reg_header"
         android:layout_height="wrap_content"
         android:layout_width="fill_parent"/>

    <TextView
        android:id="@+id/lblreg"
        android:layout_below = "@id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Please enter your registration number:" />

    <EditText
        android:id="@+id/txtreg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lblreg"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="text" />

    <Button
        android:id="@+id/btnsave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtreg"
        android:layout_centerHorizontal="true"
        android:text="Save" />
     <Button
        android:id="@+id/btnupd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtreg"
        android:layout_centerHorizontal="true"
        android:text="Save" />
     


</RelativeLayout>